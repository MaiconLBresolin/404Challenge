<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured" jcr:title="Main Properties" sling:resourceType="cq/gui/components/authoring/dialog" mode="edit" helpPath="style-guide.html#compare-rows-services">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
        <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/tabs" type="nav"/>
            <items jcr:primaryType="nt:unstructured">
                <firstTab jcr:primaryType="nt:unstructured" jcr:title="Image" sling:resourceType="granite/ui/components/foundation/section">
                    <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" margin="{Boolean}false" />
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <imageSource jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" fieldLabel="Digite o endereço da imagem" name="./imgUrl"/>
                                    <imageDescription jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Digite a descrição da imagem" name="./altImg"/>
                                </items>
                            </column>
                        </items>
                </firstTab>
                <secondTab jcr:primaryType="nt:unstructured" jcr:title="Title" sling:resourceType="granite/ui/components/foundation/section">
                    <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <titleMain jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Digite um título" name="./titleMsg"/>
                                    <fontFamilyTitle cq-msm-lockable="./titleFont" defaultValue="Space Mono" fieldLabel="Escolha uma fonte para o texto:" jcr:primaryType="nt:unstructured" name="./titleFont" sling:resourceType="granite/ui/components/coral/foundation/form/select" value="false">
                                        <items jcr:primaryType="nt:unstructured">
                                            <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="Inconsolata"/>
                                            <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="Montserrat"/>
                                            <SpaceMono jcr:primaryType="nt:unstructured" text="Space Mono" value="Space Mono"/>
                                        </items> 
                                </items>
                            </column>
                        </items>
                </secondTab>
                <thirdTab jcr:primaryType="nt:unstructured" jcr:title="Text" sling:resourceType="granite/ui/components/foundation/section">
                    <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <textMain jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Digite um texto" name="./txtMain"/>
                                    <fontFamilyText cq-msm-lockable="./txtFont" defaultValue="Space Mono" fieldLabel="Escolha uma fonte para o texto:" jcr:primaryType="nt:unstructured" name="./txtFont" sling:resourceType="granite/ui/components/coral/foundation/form/select" value="false">
                                        <items jcr:primaryType="nt:unstructured">
                                            <Inconsolata jcr:primaryType="nt:unstructured" text="Inconsolata" value="Inconsolata"/>
                                            <Montserrat jcr:primaryType="nt:unstructured" text="Montserrat" value="Montserrat"/>
                                            <SpaceMono jcr:primaryType="nt:unstructured" text="Space Mono" value="Space Mono"/>
                                        </items>                               
                                </items>
                            </column>
                        </items>
                </thirdTab>
                <forthTab jcr:primaryType="nt:unstructured" jcr:title="Button" sling:resourceType="granite/ui/components/foundation/section">
                    <layout jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <textButton jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Digite a mensagem do botão" name="./btnText"/>
                                </items>
                            </column>
                        </items>
                </forthTab>
            </items>
    </content>
</jcr:root>
